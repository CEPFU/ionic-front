{
  "api": {
    "mainUrl": "http://localhost:8080/",
    "endpoints": {
      "profile": {
        "url": "profile/"
      }
    }
  },
  "profile": {
    "properties": {
      "temperature": {
        "name": "temperature",
        "inputs": [
          {
            "label": "Is",
            "type": "select",
            "options": [
              "less",
              "less equals",
              "equals",
              "greater equals",
              "greater"
            ]
          },
          {
            "label": "Than",
            "type": "range",
            "iconBefore": "ion-ios-sunny-outline",
            "iconAfter": "ion-ios-snowy",
            "min": -40,
            "max": 60
          }
        ]
      },
      "humidity": {
        "name": "humidity",
        "input": {
          "type": "range",
          "min": 0,
          "max": 100
        }
      }
    }
  }
}
